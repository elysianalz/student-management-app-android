<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExamTable">

    <Button
        android:id="@+id/addExam"
        android:layout_width="267dp"
        android:layout_height="55dp"
        android:layout_marginTop="571dp"
        android:onClick="addExam"
        android:text="add exam"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteExam"
        android:layout_width="122dp"
        android:layout_height="44dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="640dp"
        android:onClick="deleteExam"
        android:text="delete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backToStudent"
        android:layout_width="123dp"
        android:layout_height="45dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="640dp"
        android:onClick="backToStudent"
        android:text="back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/exams"
        android:layout_width="409dp"
        android:layout_height="569dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>